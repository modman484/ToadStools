PHP=$(<~/ToadStools/.Vars/Health)
HP=100
      cat <<EOF
      echo "its a toad on a stool"
      echo "HP is $HP"
      echo "your hp is $PHP"

        Please Select:
        1. Attack
        2. How to check
        3. leave him
EOF
read -p "Enter selection [1-3] > " selection
case $selection in
  1)
$PHP  = ($PHP - 20)
echo $PHP > ~/ToadStools/.Vars/Health
      if($PHP -eq 0)
            then
      echo "YOU DIED"
      sleep
      sh . ../../ToadStools/startup.sh
      fi
          HP=($[HP-FDamage])
if($HP -eq 0)
then
 echo 100 >> ~/ToadStools/.Vars/TS
fi
  ;;
 2)
  echo "you can do \$echo \$PHP to check you health and \$echo \$TS to check how many toad stools you have"
  ;;
 3)
  break
  ;;
 *)
  echo "Sorry Player, this is not a proper option!"
;;

  esac

